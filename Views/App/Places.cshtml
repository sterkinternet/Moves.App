@{
    ViewBag.Title = "Places";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Places</h2>

<div class="container" ng-controller="PlacesController">
	<div class="row">
		<div class="col-md-8">
			<h2>Places</h2>
			<div class="panel panel-default" ng-repeat="day in days">
				<div class="panel-heading">
					<h3 class="panel-title">{{day.date}}</h3>
				</div>
				<div class="row panel-body">
					<div class="col-md-12">
						<table class="table-condensed">
							<tr ng-repeat="segment in day.segments">
								<td>Plaats: {{segment.place.name}}</td>
								<td>Tijd: {{segment.startTime | date : 'dd-MM-yyyy HH:mm:ss'}} - {{segment.endTime | date : 'dd-MM-yyyy HH:mm:ss'}}</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<h2>Options</h2>
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h4>Filter</h4>
				</div>
				<div class="panel-body">
					<label>Month</label><input type="number" step="1" min="1" max="12" ng-model="month" />
					<label>Year</label><input type="number" step="1" min="2013" max="2014" ng-model="year" />
				</div>
				<div class="panel-footer">
					<a class="btn btn-link">TODO</a>
				</div>
			</div>
		</div>
	</div>
</div>