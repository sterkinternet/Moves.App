<!DOCTYPE html>
<html lang="en" ng-app="movesApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - MovesApp</title>
    @Styles.Render("~/Content/bootstrap")    
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("MovesApp", "Start", "App", null, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Places", "Places","App")</li>
					<li>@Html.ActionLink("Storyline", "Storyline", "App")</li>					
				</ul>
			</div>
		</div>
	</div>
    
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")    
    @Scripts.Render("~/bundles/bootstrap")    
    @Scripts.Render("~/bundles/app")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MovesApp</p>
        </footer>
    </div>
</body>
</html>